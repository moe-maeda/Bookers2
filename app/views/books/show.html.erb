<div class="container px-5 px-sm-0">
  <div class="alart">
    <% if @book_new.errors.any? %>
      <strong><%= @book_new.errors.count %> errors prohibited this obj from being saved:</strong>
      <ul class="errors-message">
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <%= render 'list', user_info: @user_info, book_new: @book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %>
              <% end %><br>
              <%= link_to @book.user.name, "/users/#{@book.user_id}" %>
            </td>
            <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(params[:id]), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(params[:id]), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>