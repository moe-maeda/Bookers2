<div class="container">
  <div class="row">
    <div class="col-md-3">
<h3>New book</h3>
<%= form_with model: Book.new do |f| %>
  <p>title</p>
  <%= f.text_field :title %>
  <p>opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
    </div>

<div class="offset-md-1"></div>

<div class="col-md-8">
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
　　　  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>

