<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
          <strong>name<%= @user.name %></strong>
          <strong>introduction<%= @user.introduction %></strong>
        <% if @user == current_user %>
          <div class="btn w-40 btn-block btn-info mt-2">
            <i class="fa-solid fa-user-gear"><%= link_to edit_user_registration_path %></i>
          </div>
        <% end %>

      <h3>New book</h3>
        <%= form_with model: @book do |f| %>
          <p>title</p>
          <%= f.text_field :title %>
          <p>opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td>
                <div class="btn btn-block btn-info">
                  <%= link_to "Edit", edit_book_path(book.id) %>
                </div>
              </td>
　　　        <td>
　　　          <div class="btn btn-block btn-info">
　　　            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
　　　          </div>
　　　        </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

