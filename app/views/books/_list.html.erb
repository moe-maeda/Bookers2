    <div class="col-md-3">
      <h2>User info</h2>
        <div>
          <span class="row"><%= image_tag user_info.get_profile_image(100,100) %></span>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= user_info.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= user_info.introduction %></th>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="row">
        <%= link_to edit_user_path(user_info.id), class: "btn btn-block btn-outline-secondary my-3" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: book_new do |f| %>
        <div class=" form-group">
          <label class="form-label">Title</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class=" form-group">
          <label class="form-label">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class=" form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
        <% end %>
    </div>