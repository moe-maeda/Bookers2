    <div class="col-md-3">
      <div class="alart">
        <% if book_new.errors.any? %>
          <div><strong><%= book_new.errors.count %> errors prohibited this obj from being saved:</strong></div>
          <ul class="errors-message">
            <% book_new.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <h2>User info</h2>
          <div><%= image_tag user_info.get_profile_image(100,100) %></div>
          <div><strong>name <%= user_info.name %></strong></div>
          <div><strong>introduction <%= user_info.introduction %></strong></div>
            <%= link_to edit_user_path(user_info.id), class: "btn btn-block btn-outline-secondary mt-2" do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>

      <h3>New book</h3>
        <%= form_with model: book_new do |f| %>
          <p>title</p>
          <%= f.text_field :title %>
          <p>opinion</p>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
    </div>

    <div class="offset-md-1"></div>