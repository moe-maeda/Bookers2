<div class="container">
  <div class="row">
    <% if @user.errors.any? %>
      <div class="errors-box">
        <div class="errors-title"><strong><%= @user.errors.count %> errors prohibited this obj from being saved:</strong></div>
          <ul class="errors-message" type="square">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
    <div class="col-8 center-block">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <p>Name<p>
        <%= f.text_field :name, autofocus: true %>
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p>Introduction</p>
        <%= f.text_area :introduction, autofocus: true %><br>
        <%= f.submit "Update User", class: "btn btn-block btn-info w-25" %>
      <% end %>
    </div>
  </div>
</div>