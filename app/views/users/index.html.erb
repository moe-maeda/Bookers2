<div class="container">
  <div class="alart">
    <% if @book_new.errors.any? %>
      <strong><%= @book_new.errors.count %> errors prohibited this obj from being saved:</strong>
      <ul class="errors-message">
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <%= render 'books/list', user_info: @user_info, book_new: @book_new %>

    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col colspan-2">image</th>
            <th scope="col colspan-3">name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td colspan="2"><%= image_tag user.get_profile_image(100,100) %></td>
              <td colspan="3"><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>