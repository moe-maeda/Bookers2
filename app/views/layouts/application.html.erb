<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/da605d77f9.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <span class="navbar-brand text-light"><%= link_to "Bookers", root_path %></span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-link text-light">
                <%= link_to root_path do %>
                  <i class="fa-solid fa-house"></i>Home
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to users_path do %>
                  <i class="fa-solid fa-users"></i>Users
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to books_path do %>
                  <i class="fa-solid fa-book-open"></i>Books
                <% end %>
              <li class="nav-link text-light">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa-solid fa-right-from-bracket"></i>Log out
                <% end %>
              </li>
            ã€€<% else %>
              <li class="nav-link text-light">
                <%= link_to root_path do %>
                  <i class="fa-solid fa-house"></i>Home
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to about_path do %>
                  <i class="fa-solid fa-link"></i>About
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to new_user_registration_path do %>
                  <i class="fa-solid fa-user-plus"></i>Sign up
                <% end %>
              </li>
              <li class="nav-link text-light">
                <%= link_to new_user_session_path do %>
                  <i class="fa-solid fa-right-to-bracket"></i>Log in
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </nav>
        </div>
      </nav>
    </header>

    <main>
      <div class="flash-message">
        <%= flash[:notice] %>
      </div>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
